{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_all_c",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.c",   
                "${fileDirname}/banco.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila main.c e banco.c explicitamente para evitar erro de aspas."
        }
    ]
}